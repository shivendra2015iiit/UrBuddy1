<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android ="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:card_view ="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"

    >
    <RelativeLayout
        android:background="@color/navyblue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/home_head"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/home_head"
            android:id="@+id/home_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="Image" />

            <com.ms.square.android.expandabletextview.ExpandableTextView
                android:id="@+id/home_txt"

                android:layout_below="@+id/home_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/expandable_text"
                    android:background="@color/navyblue_overlay"
                    android:textColor="@color/white"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <ImageButton
                    android:id="@+id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@android:color/transparent"
                    android:padding="16dp"/>
            </com.ms.square.android.expandabletextview.ExpandableTextView>

       <!-- <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/home_txt"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_below="@+id/home_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textAppearance="?android:attr/textAppearanceMedium"/>-->
        <Button
            android:layout_below="@id/home_txt"
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"/>
        <Button
            android:layout_below="@id/home_txt"
            android:text="Comment"
            android:layout_alignEnd="@id/home_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>