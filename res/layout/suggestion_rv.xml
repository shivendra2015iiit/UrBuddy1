<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android ="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:card_view ="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"

    >
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:layout_margin="7dp"
    android:id="@+id/dname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
    />
        <TextView
            android:id="@+id/thought"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/dname"
            android:layout_margin="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/positive"
            android:layout_below="@+id/thought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="touch to vote..."
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>